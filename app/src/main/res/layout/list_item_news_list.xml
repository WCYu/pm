    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"

        android:layout_marginTop="26px"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_news_list"
            android:layout_width="240px"
            android:layout_height="190px"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190px"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="26px"
            android:layout_marginLeft="20px"
            android:layout_toEndOf="@+id/iv_news_list"
            android:layout_toRightOf="@+id/iv_news_list">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/tv_news_list_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="鹰计划十六中队"
                        android:textColor="@color/colorBlackLight"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_news_list_department"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24px"
                        android:ellipsize="end"
                        android:lineSpacingExtra="5px"
                        android:lines="2"
                        android:text="鹰计划第十六队 | 我是一首行走的散文诗"
                        android:textColor="@color/colordark_the"
                        android:textSize="26px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_data_frame"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="50px"
                            android:layout_height="28px"
                            android:layout_margin="5px"
                            android:layout_marginRight="8px"
                            android:text="核心"
                            android:textColor="@color/colorRed"
                            android:textSize="24px" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5px"
                        android:text="施工"
                        android:textColor="@color/colorThe_dark"
                        android:textSize="24px" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_news_list_great"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/great_icon"
                    android:gravity="center"
                    android:text="156"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/text_size_s" />

                <TextView
                    android:id="@+id/tv_news_list_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_news_list_great"
                    android:layout_alignBottom="@+id/tv_news_list_great"
                    android:layout_marginLeft="36px"
                    android:layout_marginRight="30px"
                    android:layout_toLeftOf="@+id/tv_news_list_great"
                    android:layout_toStartOf="@+id/tv_news_list_great"
                    android:gravity="center"
                    android:text="367"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/text_size_s" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

     <LinearLayout
    android:paddingBottom="5px"
    android:paddingLeft="10px"
    android:paddingRight="10px"
    android:paddingTop="10px"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_zero"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="15px"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15px"
            android:layout_weight="4"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="240px"
                android:layout_height="160px"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/zanwei" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10px"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5px"
                android:layout_marginRight="15px"
                android:layout_marginTop="10px"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorBlackLight"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tv_contect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginBottom="5px"
                android:layout_marginLeft="5px"
                android:layout_marginTop="20px"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/colordark_the"
                android:textSize="26px" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_there"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_margin="15px"
            android:textColor="@color/colorBlackLight"
            android:textSize="28px"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:layout_weight="4"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mv_imgone"
                    android:layout_width="240px"
                    android:layout_height="160px"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/zanwei" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15px"
                android:layout_weight="4"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mv_imgtwo"
                    android:layout_width="240px"
                    android:layout_height="160px"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/zanwei" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15px"
                android:layout_weight="4"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mv_imgthere"
                    android:layout_width="240px"
                    android:layout_height="160px"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/zanwei" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dip"
        android:layout_marginLeft="20px"
        android:layout_marginRight="15px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:layout_marginTop="12px"
            android:layout_marginBottom="12px"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_spare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="26px"
                android:textColor="@color/cor666"

                />

            <TextView
                android:id="@+id/tv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15px"
                android:text=""
                android:textSize="26px"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:layout_toLeftOf="@+id/tv_like"
                android:src="@mipmap/find_normal"
                android:visibility="invisible" />


            <ImageView
                android:id="@+id/iv_viewse"
                android:layout_width="25px"
                android:layout_height="25px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_marginRight="10px"
                android:layout_toRightOf="@+id/tv_spare"
                android:src="@mipmap/find_normal" />

            <TextView
                android:id="@+id/tv_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:textColor="@color/cor666"
                android:layout_toRightOf="@+id/iv_viewse"
                android:textSize="26px" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginTop="12px"
            android:layout_marginBottom="12px"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tv_timers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/cor666"
                android:textSize="26px"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>