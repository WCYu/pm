<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:orientation="vertical"
    tools:context="com.rxjy.pm.activity.CameraUnbindActivity">

    <include layout="@layout/include_header_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="24px"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:padding="24px">

                <ImageView
                    android:layout_width="10px"
                    android:layout_height="30px"
                    android:src="@mipmap/status_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="摄像头安装调试说明"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/text_size_l" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="24px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.确保网络、电源无问题后申请更换摄像头"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/text_size_m" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="2.填写更换摄像头原因"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/text_size_m" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="3.到地方行政经理领取新的摄像头"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/text_size_m" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="24px"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:padding="24px">

                <ImageView
                    android:layout_width="10px"
                    android:layout_height="30px"
                    android:src="@mipmap/status_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="安装完成照片"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/text_size_l" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="20px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_camera_unbind_standard"
                        android:layout_width="0dp"
                        android:layout_height="228px"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />

                    <View
                        android:layout_width="12px"
                        android:layout_height="match_parent" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_camera_unbind_user_photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_weight="1"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="32px"
                            android:layout_alignParentBottom="true"
                            android:background="@color/iv_selector"
                            android:gravity="center"
                            android:text="距离两米拍着"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_s" />

                    </RelativeLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="140px"
                    android:layout_height="140px"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/compare_icon" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="24px"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:padding="24px">

                <ImageView
                    android:layout_width="10px"
                    android:layout_height="30px"
                    android:src="@mipmap/status_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="抓拍照片"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/text_size_l" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="24px">

                <ImageView
                    android:id="@+id/iv_camera_unbind_debug"
                    android:layout_width="240px"
                    android:layout_height="240px"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/placeholder_img" />

                <Button
                    android:id="@+id/btn_camera_unbind_debug"
                    android:layout_width="140px"
                    android:layout_height="58px"
                    android:layout_alignBottom="@+id/iv_camera_unbind_debug"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/selector_btn_sub"
                    android:text="抓拍"
                    android:textColor="@color/colorWhite"
                    android:textSize="32px" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorWhite" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="24px">

                <TextView
                    android:id="@+id/tv_camera_unbind_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:text="编号：001"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/text_size_m" />


                <TextView
                    android:id="@+id/tv_camera_unbind_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="区域名称"
                    android:visibility="gone"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/text_size_m" />

                <EditText
                    android:id="@+id/et_camera_unbind_area"
                    android:layout_width="200px"
                    android:layout_height="40px"
                    android:background="@drawable/shape_circular_black"
                    android:cursorVisible="false"
                    android:hint="请填写区域名称"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorGrayDark"
                    android:textColorHint="@color/colorGray"
                    android:textSize="@dimen/text_size_m" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_camera_unbind"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@drawable/selector_btn_sub_full"
        android:text="完成安装"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_l" />

</LinearLayout>
