<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_header_layout"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:overScrollMode="never"
       android:fadingEdge="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="@color/image_overlay_false" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:paddingLeft="24px">

                <TextView
                    android:layout_width="10px"
                    android:layout_height="28px"
                    android:layout_gravity="center"
                    android:background="#459fe4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12px"
                    android:text="项目简介"
                    android:textColor="#595757"
                    android:textSize="30px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/timepicker_line"></View>
            <View
                android:layout_width="match_parent"
                android:layout_height="30px" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:orientation="horizontal"
                android:paddingLeft="24px"
                android:paddingRight="24px"
             >

                <TextView
                 android:id="@+id/proName"
                    android:layout_width="263px"
                    android:layout_height="wrap_content"
                    android:paddingLeft="26px"
                    android:text="名         称"
                    android:textSize="26px"
                    android:textColor="@color/colorThe_dark" />
                <TextView
                    android:layout_toRightOf="@+id/proName"
                    android:id="@+id/first_party"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:text=""
                    android:lineSpacingMultiplier="1.2"
                    android:singleLine="false"
                    android:textColor="@color/colorBlackLight" />


            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:orientation="horizontal"
                android:paddingRight="24px"
                android:paddingLeft="24px">

                <TextView
                    android:id="@+id/pro_address"
                    android:layout_width="263px"
                    android:layout_height="wrap_content"
                    android:paddingLeft="26px"
                    android:textSize="26px"
                    android:text="地         址"
                    android:textColor="@color/colorThe_dark" />

                <TextView
                    android:layout_toRightOf="@+id/pro_address"
                    android:id="@+id/telephone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="26px"
                    android:lineSpacingMultiplier="1.2"
                    android:inputType="textMultiLine"

                    android:textColor="@color/colorBlackLight" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:orientation="horizontal"
                android:paddingLeft="24px"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingLeft="26px"
                    android:text="面         积"
                    android:textSize="26px"
                    android:textColor="@color/colorThe_dark" />

                <TextView
                    android:id="@+id/design_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:textSize="26px"
                    android:text=""
                    android:textColor="@color/colorBlackLight" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:orientation="horizontal"
                android:paddingLeft="24px"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingLeft="26px"
                    android:textSize="26px"
                    android:text="类         型"
                    android:textColor="@color/colorThe_dark" />

                <TextView
                    android:id="@+id/special_vulgarity"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="26px"
                    android:text=""
                    android:textColor="@color/colorBlackLight" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:orientation="horizontal"
                android:paddingLeft="24px"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textSize="26px"
                    android:text="预计开工"
                    android:paddingLeft="26px"
                    android:textColor="@color/colorThe_dark" />

                <TextView
                    android:id="@+id/material"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text=""
                    android:textSize="26px"
                    android:textColor="@color/colorBlackLight" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:orientation="horizontal"
                android:paddingLeft="24px"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingLeft="26px"
                    android:textSize="26px"
                    android:text="工         期"
                    android:textColor="@color/colorThe_dark" />

                <TextView
                    android:id="@+id/date_signing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:textSize="26px"
                    android:text=""
                    android:textColor="@color/colorBlackLight" />
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:orientation="horizontal"
                android:paddingLeft="24px"
                android:weightSum="4">

                <TextView
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:paddingLeft="26px"
                    android:text="夜间开工"
                    android:textSize="26px"
                    android:textColor="@color/colorThe_dark" />

                <TextView
                    android:id="@+id/time_imit"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="26px"
                    android:text=""
                    android:textColor="@color/colorBlackLight" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:orientation="horizontal"
                android:paddingLeft="24px"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingLeft="26px"
                    android:textSize="26px"
                    android:text="发  包  价"
                    android:textColor="@color/colorThe_dark" />

                <TextView
                    android:id="@+id/built_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:textSize="26px"
                    android:text=""
                    android:textColor="@color/colorBlackLight" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:orientation="horizontal"
                android:paddingLeft="24px"
                android:weightSum="4"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="28px"
                    android:text="工程地址    "

                    android:textColor="@color/colorThe_dark" />

                <TextView
                    android:id="@+id/engineering_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="甲方负责人"
                    android:textSize="28px"
                    android:textColor="@color/colorBlackLight" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="@color/image_overlay_false" />
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/acketstate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

     >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"

                android:layout_marginTop="15px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="24px">

                <TextView
                    android:layout_width="8px"
                    android:layout_height="30px"
                    android:layout_gravity="center"
                    android:background="#459fe4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12px"
                    android:text="项目资料"
                    android:textColor="#595757"
                    android:textSize="30px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/timepicker_line"></View>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46px"
                android:layout_marginRight="46px"
                android:layout_marginTop="24px"
                android:orientation="horizontal"
                android:weightSum="3">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/engineering"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginLeft="10px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20px"
                        android:src="@mipmap/engineeringquantity" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="工程量"
                        android:textColor="@color/colorBlackLight"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/construction_Plans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginLeft="10px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20px"
                        android:src="@mipmap/constructionplans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="施工图"
                        android:gravity="left"
                        android:textColor="@color/colorBlackLight"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/design_Sketch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginBottom="30px">

                    <ImageView
                        android:layout_marginLeft="10px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20px"
                        android:paddingTop="10px"
                        android:src="@mipmap/designsketch" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="效果图"
                        android:gravity="bottom"
                        android:textColor="@color/colorBlackLight"
                        android:textSize="24px"
                        android:paddingLeft="7px"/>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="@color/image_overlay_false" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80px"

                android:layout_marginTop="10px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="24px">

                <TextView
                    android:layout_width="8px"
                    android:layout_height="30px"
                    android:layout_gravity="center"
                    android:background="#459fe4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12px"
                    android:text="发包额"
                    android:textColor="#595757"
                    android:textSize="30px" />
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/bargaining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/wenhao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="10px"
                        android:paddingBottom="5px"
                        android:src="@mipmap/wenhao"/>
                    <TextView
                        android:id="@+id/bargaining_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30px"
                        android:layout_toLeftOf="@+id/wenhao"
                        android:textColor="@color/colorOrange"
                        android:paddingRight="10px" />

                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/timepicker_line"></View>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:weightSum="2"
                android:orientation="horizontal">


                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_weight="0.95"
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="30px"
                        android:src="@mipmap/pm_package"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123"
                        android:textSize="40px"
                        android:id="@+id/Invoice_value"
                        android:textColor="@color/colorBlackLight"

                        android:layout_alignParentBottom="true"/>
                </com.zhy.autolayout.AutoRelativeLayout>
                <View

                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/timepicker_line"></View>
                <com.zhy.autolayout.AutoRelativeLayout
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="100px">
                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="30px"
                        android:src="@mipmap/pm_hstory"/>
                    <TextView
                     android:id="@+id/historical_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123"
                        android:textSize="40px"
                        android:textColor="@color/colorBlackLight"
                        android:layout_alignParentBottom="true"/>
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
    <com.zhy.autolayout.AutoLinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/refund"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">
            <TextView
              android:id="@+id/orderRejection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:text="拒单  "/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/sign_agreement"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorbluelkak">
            <TextView
                android:id="@+id/single_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:padding="20px"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:text="签署协议"/>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>