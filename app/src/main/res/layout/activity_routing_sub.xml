<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:orientation="vertical"
    tools:context="com.rxjy.pm.activity.RoutingSubActivity">

    <include layout="@layout/include_header_btn_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="24px"
        android:background="@color/colorLine" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="4px">

        <EditText
            android:id="@+id/et_routing_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:enabled="true"
            android:gravity="top"
            android:hint="@string/disbursement_content"
            android:inputType="textMultiLine"
            android:maxLines="6"
            android:minLines="4"
            android:padding="20px"
            android:scrollbars="vertical"
            android:textColorHint="@color/colorGray"
            android:textSize="@dimen/text_size_m"></EditText>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20px">

        <ImageView
            android:layout_width="27px"
            android:layout_height="36px"
            android:src="@mipmap/address_icon" />

        <TextView
            android:id="@+id/tv_routing_sub_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_m" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="82px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36px"
            android:gravity="center_vertical"
            android:text="工人总数"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_m" />

        <EditText
            android:id="@+id/et_routing_sub_count"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24px"
            android:gravity="center"
            android:hint="数量"
            android:inputType="number"
            android:textColorHint="@color/colorGray"
            android:textSize="@dimen/text_size_m" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20px">

        <GridView
            android:id="@+id/gv_routing_sub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="10px"
            android:numColumns="3"
            android:verticalSpacing="10px"></GridView>

    </RelativeLayout>

</LinearLayout>
