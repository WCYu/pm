<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rxjy.pm.activity.my.XiangMuInfoActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100px">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="20px"
            android:src="@mipmap/back_icon" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="项目上传"
            android:textColor="#000000"
            android:textSize="32px" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="center"
                android:background="#cbcbcb"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="72px">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30px"
                    android:text="装饰公司"
                    android:textColor="#000000"
                    android:textSize="28px" />

                <EditText
                    android:id="@+id/et_gcid"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:background="@null"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="装饰公司"
                    android:textColor="#595757"
                    android:textSize="@dimen/text_size_m" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="center"
                android:layout_marginBottom="12px"
                android:layout_marginTop="12px"
                android:background="#cbcbcb"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="80px">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30px"
                    android:text="项目名称"
                    android:textColor="#000000"
                    android:textSize="28px" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:background="@null"
                    android:hint="项目名称"
                    android:textColor="#595757"
                    android:textSize="@dimen/text_size_m" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="center"
                android:layout_marginBottom="12px"
                android:layout_marginTop="12px"
                android:background="#cbcbcb"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="72px">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30px"
                    android:text="项目地址"
                    android:textColor="#000000"
                    android:textSize="28px" />

                <EditText
                    android:id="@+id/et_address"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:background="@null"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="项目地址"
                    android:textColor="#595757"
                    android:textSize="@dimen/text_size_m" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="#cbcbcb"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="72px">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30px"
                    android:text="项目面积"
                    android:textColor="#000000"
                    android:textSize="28px" />

                <EditText
                    android:id="@+id/et_mianji"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:background="@null"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="项目面积"
                    android:textColor="#595757"
                    android:textSize="@dimen/text_size_m" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="#cbcbcb"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="72px">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30px"
                    android:text="合 同 额"
                    android:textColor="#000000"
                    android:textSize="28px" />

                <EditText
                    android:id="@+id/et_hetong"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:background="@null"
                    android:ems="10"
                    android:maxLength="11"
                    android:inputType="number"
                    android:hint="合 同 额"
                    android:textColor="#595757"
                    android:textSize="@dimen/text_size_m" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="#cbcbcb"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="72px">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30px"
                    android:text="客    户"
                    android:textColor="#000000"
                    android:textSize="28px" />

                <EditText
                    android:id="@+id/et_kehu"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:background="@null"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="客户姓名"
                    android:textColor="#595757"
                    android:textSize="@dimen/text_size_m" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="#cbcbcb"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="72px">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30px"
                    android:text="电    话"
                    android:textColor="#000000"
                    android:textSize="28px" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:background="@null"
                    android:ems="10"
                    android:maxLength="11"
                    android:inputType="number"
                    android:hint="客户电话"
                    android:textColor="#595757"
                    android:textSize="@dimen/text_size_m" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="#cbcbcb"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="72px">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30px"
                    android:text="证 明 人"
                    android:textColor="#000000"
                    android:textSize="28px" />

                <EditText
                    android:id="@+id/et_zhengming"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:background="@null"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="证明人姓名"
                    android:textColor="#595757"
                    android:textSize="@dimen/text_size_m" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="#cbcbcb"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="72px">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30px"
                    android:text="电    话"
                    android:textColor="#000000"
                    android:textSize="28px" />

                <EditText
                    android:id="@+id/et_zhengming_phone"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:background="@null"
                    android:ems="10"

                    android:maxLength="11"
                    android:inputType="number"
                    android:hint="证明人电话"
                    android:textColor="#595757"
                    android:textSize="@dimen/text_size_m" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">
                <Button
                    android:id="@+id/btn_commit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorRed"
                    android:text="上传"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
