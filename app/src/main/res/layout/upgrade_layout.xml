<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="710px"
    android:layout_marginLeft="48px"
    android:layout_marginRight="48px"
    android:orientation="vertical">
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="710px"
        android:background="@mipmap/background_update">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:layout_marginTop="60px"
            android:text="发现新版本"
            android:textColor="@color/colorWhite"
            android:textSize="48px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/update_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginTop="400px"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/colortextcolor"
            android:textSize="36px" />

        <LinearLayout
            android:id="@+id/back_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="40px"
                android:paddingTop="40px"
                android:text="残忍拒绝"
                android:textSize="36px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/colorback">

            </View>

            <TextView
                android:id="@+id/confirm_upgrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="40px"
                android:paddingTop="40px"
                android:text="立即升级"
                android:textColor="@color/colorblue"
                android:textSize="36px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@+id/back_dialog"
            android:background="@color/colorback"></View>
    </RelativeLayout>
</LinearLayout>