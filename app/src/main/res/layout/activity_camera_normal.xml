<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:orientation="vertical"
    tools:context="com.rxjy.pm.activity.CameraNormalActivity">

    <include layout="@layout/include_header_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24px"
        android:background="@color/colorWhite"
        android:padding="24px">

        <ImageView
            android:id="@+id/iv_camera_normal_state_icon"
            android:layout_width="10px"
            android:layout_height="30px"
            android:layout_centerVertical="true"
            android:src="@mipmap/status_icon" />

        <TextView
            android:id="@+id/tv_camera_normal_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/iv_camera_normal_state_icon"
            android:text="编号：0040"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_l" />

        <TextView
            android:id="@+id/tv_camera_normal_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="区域：办公室"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_l" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="24px"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="24px">

        <ImageView
            android:layout_width="10px"
            android:layout_height="30px"
            android:src="@mipmap/status_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="安装完成照片"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_l" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="20px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_camera_normal_standard"
                android:layout_width="0dp"
                android:layout_height="228px"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="12px"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_camera_normal_user_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_centerInParent="true"
            android:src="@mipmap/compare_icon" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="24px"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="24px">

        <ImageView
            android:layout_width="10px"
            android:layout_height="30px"
            android:src="@mipmap/status_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="抓拍照片"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_l" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="24px">

        <ImageView
            android:id="@+id/iv_camera_normal_debug"
            android:layout_width="240px"
            android:layout_height="240px"
            android:scaleType="centerCrop"
            android:src="@mipmap/placeholder_img" />

        <Button
            android:id="@+id/btn_camera_normal_debug"
            android:layout_width="140px"
            android:layout_height="58px"
            android:layout_alignBottom="@+id/iv_camera_normal_debug"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_btn_sub"
            android:text="抓拍"
            android:textColor="@color/colorWhite"
            android:textSize="32px" />

    </RelativeLayout>

</LinearLayout>
