<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px">

        <ImageView
            android:id="@+id/iv_list_item_shop_cart_mat_checked"
            android:layout_width="38px"
            android:layout_height="38px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:src="@mipmap/checked_box_normal_icon" />

        <TextView
            android:id="@+id/tv_list_item_shop_cart_mat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="24px"
            android:layout_toRightOf="@+id/iv_list_item_shop_cart_mat_checked"
            android:text="钢筋"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_m" />

        <TextView
            android:id="@+id/tv_list_item_shop_cart_mat_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_list_item_shop_cart_mat_name"
            android:layout_marginLeft="20px"
            android:layout_marginTop="12px"
            android:layout_toRightOf="@+id/iv_list_item_shop_cart_mat_checked"
            android:text="金牌"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/text_size_s" />

        <RelativeLayout
            android:id="@+id/rl_list_item_shop_cart_mat_detail"
            android:layout_width="382px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:padding="24px">

            <TextView
                android:id="@+id/tv_list_item_shop_cart_mat_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:singleLine="true"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/text_size_m" />

            <TextView
                android:id="@+id/tv_list_item_shop_cart_mat_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="¥15"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_size_s" />

            <TextView
                android:id="@+id/tv_list_item_shop_cart_mat_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="X 15"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_size_s" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_list_item_shop_cart_mat_edit"
            android:layout_width="382px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_list_item_shop_cart_mat_del"
                android:layout_width="120px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/colorRedLight"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_l" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/tv_list_item_shop_cart_mat_del"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_list_item_shop_cart_mat_remove"
                    android:layout_width="64px"
                    android:layout_height="64px"
                    android:src="@drawable/selector_remove_l" />

                <TextView
                    android:id="@+id/et_list_item_shop_cart_mat_count"
                    android:layout_width="80px"
                    android:layout_height="64px"
                    android:background="@null"
                    android:cursorVisible="false"
                    android:gravity="center"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/text_size_m" />

                <ImageView
                    android:id="@+id/iv_list_item_shop_cart_mat_add"
                    android:layout_width="64px"
                    android:layout_height="64px"
                    android:src="@drawable/selector_add_l" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>