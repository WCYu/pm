<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24px">

        <ImageView
            android:id="@+id/iv_list_item_shop_cart_checked"
            android:layout_width="38px"
            android:layout_height="38px"
            android:src="@mipmap/checked_box_normal_icon" />

        <TextView
            android:id="@+id/tv_list_item_shop_cart_count"
            android:layout_width="36px"
            android:layout_height="36px"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/iv_list_item_shop_cart_checked"
            android:background="@drawable/shape_circular_rectangle_red"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/colorRedLight"
            android:textSize="@dimen/text_size_l" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/tv_list_item_shop_cart_count"
            android:text="配送清单"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_l" />

        <ImageView
            android:id="@+id/iv_list_item_shop_cart_call"
            android:layout_width="32px"
            android:layout_height="36px"
            android:layout_alignParentRight="true"
            android:src="@drawable/selector_merchant_call" />

        <TextView
            android:id="@+id/tv_list_item_shop_cart_merchant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:layout_toLeftOf="@+id/iv_list_item_shop_cart_call"
            android:text="张洋"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_l" />

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_list_item_shop_cart_mat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:focusable="false"></ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorBG" />

    <LinearLayout
        android:id="@+id/lin_list_item_shop_cart_mat"
        android:layout_width="match_parent"
        android:layout_height="262px"
        android:orientation="vertical"
        android:padding="24px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_list_item_shop_cart_f_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_s" />

            <TextView
                android:id="@+id/tv_list_item_shop_cart_p_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_s" />

            <TextView
                android:id="@+id/tv_list_item_shop_cart_a_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_s" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px">

            <ImageView
                android:id="@+id/iv_list_item_shop_cart_time"
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_centerVertical="true"
                android:src="@mipmap/choice_time_icon" />

            <TextView
                android:id="@+id/tv_list_item_shop_cart_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/iv_list_item_shop_cart_time"
                android:text="请选择到场日期"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/text_size_m" />

            <TextView
                android:id="@+id/tv_list_item_shop_cart_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorRedLight"
                android:textSize="@dimen/text_size_l" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_list_item_shop_cart_remark"
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_marginTop="20px"
            android:background="@drawable/shape_circular_black"
            android:padding="10px">

            <TextView
                android:id="@+id/tv_list_item_shop_cart_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_s" />

            <TextView
                android:id="@+id/tv_list_item_shop_cart_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_s" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>