<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="24px">

        <ImageView
            android:id="@+id/iv_list_item_msg_type_type"
            android:layout_width="46px"
            android:layout_height="46px"
            android:layout_centerVertical="true"
            android:src="@mipmap/msg_incident_icon" />

        <TextView
            android:id="@+id/tv_list_item_msg_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:lines="1"
            android:maxLines="15"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/iv_list_item_msg_type_type"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_l" />

        <TextView
            android:id="@+id/tv_list_item_msg_type_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_list_item_msg_type_title"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20px"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/text_size_s" />

        <TextView
            android:id="@+id/tv_list_item_msg_type_state"
            android:layout_width="16px"
            android:layout_height="16px"
            android:layout_alignRight="@+id/tv_list_item_msg_type_time"
            android:layout_alignTop="@+id/tv_list_item_msg_type_time"
            android:background="@drawable/shape_tip"
            android:visibility="invisible" />

    </RelativeLayout>

</LinearLayout>