<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:orientation="vertical">

    <include layout="@layout/include_header_layout" />

    <RelativeLayout
        android:id="@+id/rl_user_info"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_marginTop="30px"
        android:background="@color/colorWhite">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLine" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine" />

        <com.rxjy.pm.widget.RoundAngleImageView
            android:id="@+id/riv_mine"
            android:layout_width="130px"
            android:layout_height="130px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:scaleType="fitXY"
            app:roundHeight="20px"
            app:roundWidth="20px" />

        <LinearLayout
            android:layout_width="500px"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/riv_mine"
            android:layout_toRightOf="@+id/riv_mine"
            android:orientation="vertical"
            android:paddingLeft="36px">

            <TextView
                android:id="@+id/tv_mine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/text_size_l" />

            <TextView
                android:id="@+id/tv_mine_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18px"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_s" />
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36px"
            android:src="@mipmap/arrow_left" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_office"
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:layout_marginTop="20px"
        android:visibility="gone"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="46px"
            android:layout_height="46px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@drawable/ic_mine_noffice" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/imageView7"
            android:textSize="30px"
            android:text="办公" />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18px"
            android:src="@drawable/ic_go" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_wallet"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="24px"
        android:background="@color/colorWhite">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLine" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine" />

        <ImageView
            android:id="@+id/iv_wallet"
            android:layout_width="46px"
            android:layout_height="46px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@mipmap/wallet" />

        <TextView
            android:id="@+id/tv_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/iv_wallet"
            android:text="@string/rs_wallet"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_l" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36px"
            android:src="@mipmap/arrow_left" />

    </RelativeLayout>

    <RelativeLayout
