<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="420px"
        android:layout_height="272px"
        android:layout_gravity="center"
        app:cardCornerRadius="20px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_dialog_tip"
                android:layout_width="38px"
                android:layout_height="38px"
                android:layout_marginLeft="28px"
                android:layout_marginTop="28px"
                android:src="@mipmap/dialog_tip_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginTop="32px"
                android:layout_toRightOf="@+id/iv_dialog_tip"
                android:text="修改购买数量"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_m" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_dialog_remove"
                    android:layout_width="64px"
                    android:layout_height="64px"
                    android:src="@drawable/selector_remove_l" />

                <EditText
                    android:id="@+id/et_dialog_count"
                    android:layout_width="80px"
                    android:layout_height="64px"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:cursorVisible="false"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/text_size_m" />

                <ImageView
                    android:id="@+id/iv_dialog_add"
                    android:layout_width="64px"
                    android:layout_height="64px"
                    android:src="@drawable/selector_add_l" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_btn"
                android:layout_width="match_parent"
                android:layout_height="68px"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_dialog_no"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:text="取消"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/text_size_l" />

                <Button
                    android:id="@+id/btn_dialog_yes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorRedLight"
                    android:text="确认"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_l" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignTop="@+id/lin_btn"
                android:background="@color/colorLine" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>