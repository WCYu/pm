<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:orientation="vertical"
    tools:context="com.rxjy.pm.activity.SubjoinActivity">

    <include layout="@layout/include_header_btn_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="24px"
        android:background="@color/colorLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="24px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:background="@drawable/shape_circular_black"
            android:padding="10px">

            <EditText
                android:id="@+id/et_subjoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请填写备注内容"
                android:maxLength="70"
                android:textColor="@color/colorGrayDark"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/text_size_s" />

            <TextView
                android:id="@+id/tv_subjoin_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_size_s" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20px"
            android:text="备注：请填写材料相关属性，物业要求如电线颜色，导入限高等信息。"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/text_size_s" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine" />

</LinearLayout>
