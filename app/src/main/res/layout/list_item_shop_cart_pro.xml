<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="24px">

        <ImageView
            android:id="@+id/iv_list_item_shop_cart_pro_type"
            android:layout_width="68px"
            android:layout_height="68px"
            android:src="@mipmap/business_icon" />

        <TextView
            android:id="@+id/tv_list_item_shop_cart_pro_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorRedLight"
            android:textSize="@dimen/text_size_l" />

        <TextView
            android:id="@+id/tv_list_item_shop_cart_pro_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:singleLine="true"
            android:layout_toLeftOf="@id/tv_list_item_shop_cart_pro_price"
            android:layout_toRightOf="@+id/iv_list_item_shop_cart_pro_type"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_l" />

        <TextView
            android:id="@+id/tv_list_item_shop_cart_pro_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_list_item_shop_cart_pro_type"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/iv_list_item_shop_cart_pro_type"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/text_size_s" />

    </RelativeLayout>

</LinearLayout>