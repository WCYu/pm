<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:orientation="vertical">

    <include layout="@layout/include_header_layout" />
 <LinearLayout
     android:visibility="gone"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="24px"
        android:background="@color/colorLine" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="24px">

        <ImageView
            android:id="@+id/iv_mat_merchant_join"
            android:layout_width="46px"
            android:layout_height="46px"
            android:layout_centerVertical="true"
            android:src="@mipmap/mat_merchant_join" />

        <TextView
            android:id="@+id/tv_mat_merchant_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:layout_toRightOf="@+id/iv_mat_merchant_join"
            android:text="@string/mat_merchant_join"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_l" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:text="@string/free_join"
            android:textColor="@color/colorRedLight"
            android:textSize="@dimen/text_size_s" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_left" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="24px"
        android:background="@color/colorLine" />

    <RelativeLayout
        android:id="@+id/rl_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="24px"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_task"
            android:layout_width="46px"
            android:layout_height="46px"
            android:layout_centerVertical="true"
            android:src="@mipmap/task_icon" />

        <TextView
            android:id="@+id/tv_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:layout_toRightOf="@+id/iv_task"
            android:text="@string/task"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_l" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_left" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="24px">

        <ImageView
            android:id="@+id/iv_mat"
            android:layout_width="46px"
            android:layout_height="46px"
            android:layout_centerVertical="true"
            android:src="@mipmap/mat_icon" />

        <TextView
            android:id="@+id/tv_mat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:layout_toRightOf="@+id/iv_mat"
            android:text="@string/mat"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_l" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_left" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="24px">

        <ImageView
            android:id="@+id/iv_shop_cart"
            android:layout_width="46px"
            android:layout_height="46px"
            android:layout_centerVertical="true"
            android:src="@mipmap/shop_cart_icon" />

        <TextView
            android:id="@+id/tv_shop_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:layout_toRightOf="@+id/iv_shop_cart"
            android:text="@string/shop_cart"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_l" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_left" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="24px"
        android:background="@color/colorLine"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_pro_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="24px"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_pro_money"
            android:layout_width="46px"
            android:layout_height="46px"
            android:layout_centerVertical="true"
            android:src="@mipmap/pro_money_icon" />

        <TextView
            android:id="@+id/tv_pro_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:layout_toRightOf="@+id/iv_pro_money"
            android:text="@string/pro_money"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_l" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_left" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine" />
 </LinearLayout>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#ffffff"
           android:orientation="vertical">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="88px"
               android:gravity="center_vertical"
               android:paddingLeft="30px"
               android:text="瑞祥服务"
               android:textSize="32px" />

           <View
               android:layout_width="match_parent"
               android:layout_height="3px"
               android:background="#f7f5f5" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:orientation="horizontal">

               <LinearLayout
                   android:id="@+id/qingjia_line"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginBottom="15px"
                       android:layout_marginTop="40px"
                       android:layout_weight="1"

                       android:src="@mipmap/more_redenvelopes" />

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginBottom="40px"
                       android:gravity="center"
                       android:text="红包"
                       android:textSize="25px" />


               </LinearLayout>

               <View
                   android:layout_width="3px"
                   android:layout_height="match_parent"
                   android:background="#f7f5f5" />

               <LinearLayout
                   android:id="@+id/zhuanzheng_line"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical">

                   <ImageView
                       android:id="@+id/imageView27"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:layout_marginBottom="15px"
                       android:layout_marginTop="40px"
                       android:layout_weight="1"
                       android:src="@mipmap/more_returnguest" />

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginBottom="40px"
                       android:gravity="center"

                       android:textSize="25px"
                       android:text="回头客"/>


               </LinearLayout>

               <View
                   android:layout_width="3px"
                   android:layout_height="match_parent"
                   android:background="#f7f5f5" />

               <LinearLayout

                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:layout_gravity="center"
                       android:layout_marginBottom="15px"
                       android:layout_marginTop="40px"

                       android:src="@mipmap/more_joinin" />

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginBottom="40px"
                       android:gravity="center"
                       android:text="加盟推荐"
                       android:textSize="25px" />
               </LinearLayout>

           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="20px"
               android:background="#f7f5f5" />
           </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#ffffff"
           android:orientation="vertical">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="88px"
               android:gravity="center_vertical"
               android:paddingLeft="30px"
               android:text="材料商服务"
               android:textSize="32px" />

           <View
               android:layout_width="match_parent"
               android:layout_height="3px"
               android:background="#f7f5f5" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:orientation="horizontal">

               <LinearLayout
            android:id="@+id/rl_mat_merchant_join"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical">

                   <ImageView
                       android:layout_width="140dp"
                       android:layout_height="56px"
                       android:layout_gravity="center"
                       android:layout_marginBottom="15px"
                       android:layout_marginTop="40px"
                       android:layout_weight="1"
                       android:src="@mipmap/mat_merchant_join" />

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="40px"
                       android:gravity="center"
                              android:text="材料商入住"
                       android:textSize="25px" />


               </LinearLayout>

               <View
                   android:layout_width="3px"
                   android:layout_height="match_parent"
                   android:background="#f7f5f5" />

               <LinearLayout
                   android:id="@+id/rl_mat"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical">

                   <ImageView
                       android:layout_width="56px"
                       android:layout_height="56px"
                       android:layout_gravity="center"
                       android:layout_marginBottom="15px"
                       android:layout_marginTop="40px"
                       android:layout_weight="1"
                       android:src="@mipmap/mat_icon"

                        />

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginBottom="40px"
                       android:gravity="center"
                       android:text="订单查询"
                       android:textSize="25px" />


               </LinearLayout>

               <View
                   android:layout_width="3px"
                   android:layout_height="match_parent"
                   android:background="#f7f5f5" />

               <LinearLayout
                   android:id="@+id/rl_shop_cart"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical">

                   <ImageView
                       android:layout_width="56px"
                       android:layout_height="56px"
                       android:layout_marginBottom="15px"
                       android:layout_marginTop="40px"
                       android:layout_weight="1"
                       android:layout_gravity="center"
                       android:src="@mipmap/shop_cart_icon"
            />

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginBottom="40px"
                       android:gravity="center"
                      android:text="购物车"
                       android:textSize="25px" />
               </LinearLayout>
           </LinearLayout>
       </LinearLayout>
       </LinearLayout>
   </ScrollView>
</LinearLayout>